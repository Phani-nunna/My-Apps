<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:ignore="HardcodedText,ContentDescription,UselessParent" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
         android:background="#000000"
        android:layout_marginBottom="1dp">

        <ImageButton
            android:id="@+id/dishImageButton"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:alpha="0.6"
            android:background="@drawable/temp"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_alignParentRight="true"
            android:layout_alignBottom="@+id/dishImageButton"
            android:background="@drawable/radialback"
            android:gravity="bottom"
            android:orientation="vertical"
            android:padding="10dp" >

            <com.svaad.utils.RobotoTextview
                android:id="@+id/branchNameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rayalseema Ruchulu"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#ffffff"
                android:textSize="24sp"
                android:textStyle="bold" />

            <com.svaad.utils.RobotoTextview
                android:id="@+id/branchAddresstextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:text="Begumpet"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#ffffff"
                android:textSize="18sp" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="4" >
	            <ImageView
	            android:id="@+id/status"
	            android:layout_width="22dp"
	            android:layout_height="22dp"
	            android:layout_weight="1"
	       	    android:layout_gravity="center"
	            android:src="@drawable/timings_green_96"
	            android:background="@null" />
            <com.svaad.utils.RobotoTextview
                android:id="@+id/branchtimings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:layout_marginLeft="5dp"
                android:layout_weight="3"
                android:text="Begumpet"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#ffffff"
                android:textSize="16sp" />
       	</LinearLayout>	      
        </LinearLayout>
        
    </RelativeLayout>

</LinearLayout>