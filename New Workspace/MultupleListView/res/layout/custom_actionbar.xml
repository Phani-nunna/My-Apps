<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="55dp"
    android:layout_gravity="fill_horizontal">

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   android:id="@+id/actionbar_header_layout"
    android:weightSum="32">

    <ImageButton
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="4"
        android:background="@android:color/transparent"
        android:src="@drawable/svaadlogo"
        android:padding="6dp"
        android:scaleType="fitCenter"/>
    <TextView
        android:layout_width="0dp"
        android:layout_weight="12"
        android:layout_height="match_parent"
        android:id="@+id/tabname"
        android:text="Svaad"
        android:gravity="center_vertical"
        android:textColor="@android:color/black"
        android:textSize="17dp"
        android:textStyle="italic"
        android:background="#00000000"
        />

    <ImageButton
        android:layout_width="0dp"
        android:layout_weight="4"
        android:layout_height="match_parent"
        android:background="@drawable/actionbar_selectedtab"
        android:src="@drawable/home_white_48"
        android:id="@+id/home" />

    <ImageButton
        android:layout_width="0dp"
        android:layout_weight="4"
        android:layout_height="match_parent"
        android:scaleType="center"
        android:src="@drawable/search_white_48"
        android:background="@android:color/transparent"
        android:id="@+id/search" />

    <ImageButton
        android:layout_width="0dp"
        android:layout_weight="4"
        android:scaleType="center"
        android:layout_height="match_parent"
        android:src="@drawable/me_white_48"
        android:background="@android:color/transparent"
        android:id="@+id/profile" />

    <ImageButton
        android:layout_width="0dp"
        android:layout_weight="4"
        android:src="@drawable/home_white_48"
        android:scaleType="center"
        android:layout_height="match_parent"
        android:background="@android:color/transparent"
        android:id="@+id/plans" />
 </LinearLayout>
</RelativeLayout>